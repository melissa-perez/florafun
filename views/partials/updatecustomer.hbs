<div class='container border border-light rounded border-2 mb-2'>
  <form
    id='update-{{toLowerCase (removeLastLetter tableId)}}-form'
    class='mb-4'
  >
    <legend>Update an existing {{removeLastLetter pageTitle}}</legend>
    <label
      class='form-label'
      for='update-{{toLowerCase (removeLastLetter tableId)}}-select'
    >
      Use the dropdown to update an existing
      {{toLowerCase (removeLastLetter pageTitle)}}:
    </label>
    <select
      name='update-{{toLowerCase (removeLastLetter tableId)}}-select'
      id='update-{{toLowerCase (removeLastLetter tableId)}}-select'
      onChange='customerFill({{jsonHelper data}})'
    >
      <option value=''>Select a
        {{toLowerCase (removeLastLetter pageTitle)}}.</option>
      {{#each this.data}}
        <option value='{{this.ID}}'>({{this.ID}}) {{this.Name}}</option>
      {{/each}}
    </select>

    <div class='row mb-3'>
      <fieldset>
        <label class='form-label' for='update-name'>
          {{removeLastLetter pageTitle}}
          name:
        </label>
        <input
          class='form-control'
          type='text'
          name='update-name'
          id='update-name'
          required
        />
        <div class='form-text'>
          <em>First name Last name</em>
        </div>
      </fieldset>
    </div>

    <div class='row mb-3'>
      <fieldset>
        <label class='form-label' for='update-address'>
          Address
        </label>
        <input
          class='form-control'
          type='text'
          name='update-address'
          id='update-address'
          required
        />
        <div class='form-text'>
          <em>Street No. Street Name City State Zip</em>
        </div>
      </fieldset>
    </div>

    <div class='row mb-3'>
      <fieldset>
        <label class='form-label' for='update-email'>
          Email (Required*)
        </label>
        <input
          class='form-control'
          type='email'
          name='update-email'
          id='update-email'
          required
        />
        <div class='form-text'>
          <em>address@provider.ext</em>
        </div>
      </fieldset>
    </div>

    <div class='row mb-3'>
      <fieldset>
        <label class='form-label' for='update-phone'>
          Phone number
        </label>
        <input
          class='form-control'
          type='tel'
          name='update-phone'
          id='update-phone'
          pattern='[0-9]{3}-[0-9]{3}-[0-9]{4}'
          placeholder='optional'
        />
        <div class='form-text'>
          <em>###-###-####</em>
        </div>
      </fieldset>
    </div>
    <div class='form-text'>
      WARNING: The update operation is permanent.
    </div><br />
    <button class='btn btn-success my-2 my-sm-0 btn-sm' type='submit'>Update
      {{toLowerCase (removeLastLetter pageTitle)}}</button>
  </form>
</div>