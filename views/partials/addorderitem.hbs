<div class='container border border-light rounded border-2 mb-2'>
  <form
    method='POST'
    id='add-{{toLowerCase (removeLastLetter tableId)}}-form'
    class='mb-4'
    action='/add-{{toLowerCase (removeLastLetter tableId)}}-form'
  >
    <legend>Add a new {{removeLastLetter pageTitle}}</legend>
    <p>Use the form below to add a new
      {{toLowerCase (removeLastLetter pageTitle)}}.
    </p>
    <div class='row mb-3'> <h5>To add other Order information, please use the <strong>Orders</strong> page.</h5></div>
    <div class='row mb-3'>
      <fieldset>
        <label class='form-label' for='add-quantity'>
          Order Item Quantity
        </label>
        <input
          class='form-control'
          type='number'
          name='add-quantity'
          id='add-quantity'
          min='0'
          step='1'
          required
        />
      </fieldset>
    </div>

    <div class='row mb-3'>
      <fieldset>
        <label class='form-label' for='add-order-select'>
          Order ID:
        </label>
        <select
          name='add-order-select'
          id='add-order-select'
        >
          <option value=''>NULL</option>
          {{#each this.ordersdata}}
            <option value='{{this.ID}}'>Order ID: {{this.ID}}</option>
          {{/each}}
        </select>
      </fieldset>
    </div>

    <div class='row mb-3'>
      <fieldset>
        <label class='form-label' for='add-item-select'>
          Item ID:
        </label>
        <select
          name='add-item-select'
          id='add-item-select'
        >
          <option value=''>NULL</option>
          {{#each this.itemsdata}}
            <option value='{{this.ID}}'>Item ID: {{this.ID}}, Item: {{this.Item}}</option>
          {{/each}}
        </select>
      </fieldset>
    </div>
    <button class='btn btn-success my-2 my-sm-0 btn-sm' type='submit'>Add
      {{toLowerCase (removeLastLetter pageTitle)}}</button>
  </form>
</div>