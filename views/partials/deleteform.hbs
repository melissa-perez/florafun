<div class='container border border-light rounded border-2 mb-2'>
  <form
    id='{{toLowerCase tableId}}-html-delete'
    class='mb-3'
  >
    <legend>Delete a {{removeLastLetter tableId}}</legend>
    <fieldset>
      <label class='form-label' for='delete-customer-form'>
        Use the dropdown to delete existing {{toLowerCase (removeLastLetter pageTitle)}}:
      </label>
      <select name='delete-customer-form' id='delete-customer-form'>
        <option value=''>Select a {{toLowerCase (removeLastLetter pageTitle)}}.</option>
        {{#each this.[data]}}
            <option value='{{this.ID}}'>({{this.ID}}) {{this.Name}}</option>
        {{/each}}
      </select>
      <div class='form-text'>
        WARNING: The delete operation is permanent.
      </div><br />
      <button
        class='btn btn-danger my-2 my-sm-0 btn-sm'
        onclick="deleteCustomer()"
      >Delete</button>
    </fieldset>
  </form>
</div>
