<div class='container border border-light rounded border-2'>
  <form
    method='POST'
    id='add-{{toLowerCase (removeLastLetter pageTitle)}}-form'
    action='/add-{{toLowerCase (removeLastLetter pageTitle)}}-form'
    class='mb-3'
  >
    <legend>Add a new {{removeLastLetter pageTitle}}</legend>
    <fieldset>
      <p>Use the form below to add a new
        {{toLowerCase (removeLastLetter pageTitle)}}.</p>
      <label
        class='form-label'
        for='input-{{toLowerCase (removeLastLetter pageTitle)}}'
      >
        {{removeLastLetter pageTitle}}
        name
      </label>
      <input
        class='form-control'
        type='text'
        name='input-{{toLowerCase (removeLastLetter pageTitle)}}'
        required
      />
      <br />
      <button class='btn btn-success my-2 my-sm-0 btn-sm' type='submit'>Add
        {{toLowerCase (removeLastLetter pageTitle)}}</button>
    </fieldset>
  </form>
</div>