<table id="suppliers-table">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, name, address, email and is_local, in order --}}
        {{#each data}}
        <tr data-value={{this.supplier_id}}>
            <td>{{this.supplier_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.email}}</td>
            <td>{{this.is_local}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Search Using an HTML Form</h2>
<p>Search by name using the field below. Partial name is okay too!</p>
<form id="search-supplier-html" method='GET' action='/suppliers'>
    <label for="input-name">Search by Name: </label>
    <input type="text" name="name" id="input-name-html-search">
    
    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>

